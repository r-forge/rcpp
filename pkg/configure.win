# simple check

gxx_version=`g++ -v 2>&1 | grep "^g.*version" | sed -e 's/^.*g.. version *//'`
echo "Seeing g++ version ${gxx_version}"

case ${gxx_version} in
    4.3.*|4.4.*|4.5.*)
           echo "You can enable support for the C++0x draft by uncommenting"
           echo "the variable 'CLINK_CPPFLAGS' in src/Makevars.win"
    ;;
esac
